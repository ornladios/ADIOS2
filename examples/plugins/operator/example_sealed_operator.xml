<?xml version="1.0"?>
<!-- Config XML file for the EncryptionOperator plugin examples -->

<adios-config>

    <!--====================================
           Configuration for the Writer
        ====================================-->

    <io name="writer">
        <variable name="data">
            <operation type="plugin">
                <parameter key="PluginName" value="Encryption"/>
                <parameter key="PluginLibrary" value="EncryptionOperator" />
                <parameter key="PublicKeyFile" value="test-public.key" />
            </operation>
        </variable>
        <engine type="BP4">
        </engine>
    </io>


    <!--====================================
           Configuration for the Reader
        ====================================-->

    <io name="reader">
        <variable name="data">
            <operation type="plugin">
                <parameter key="PluginName" value="Encryption"/>
                <parameter key="PluginLibrary" value="EncryptionOperator" />
                <parameter key="PublicKeyFile" value="test-public.key" />
                <parameter key="SecretKeyFile" value="test-secret.key" />
            </operation>
        </variable>
        <engine type="BPFile">
        </engine>
    </io>
</adios-config>
