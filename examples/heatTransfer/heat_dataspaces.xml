<?xml version="1.0"?>
<!-- Config XML file fo the  
     - heatTransfer_write_adios2 
     - heatTransfer_read
     executables in build/bin -->

<adios-config>

    <!--====================================
           Configuration for the Writer 
        ====================================-->

    <io name="writer">
        <engine type="DATASPACES">
        	<parameter key="AppID" value="1"/>
        </engine>
    </io>


    <!--======================================
           Configuration for the Reader Input
        ======================================-->

    <io name="readerInput">
        <engine type="DATASPACES">
        	<parameter key="AppID" value="2"/>
        </engine>
    </io>
    
    
    <!--=======================================
           Configuration for the Reader output
        =======================================-->
    
    <io name="readerOutput">
        <engine type="BPFile">
        </engine>
    </io>

</adios-config>
